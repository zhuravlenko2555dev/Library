<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.zhuravlenko2555dev.library.ui.RecyclingImageView
        android:id="@+id/imageViewBookSmall"
        android:layout_width="@dimen/image_view_book_small_width"
        android:layout_height="@dimen/image_view_book_small_height"
        android:layout_marginRight="2dp" />

    <TextView
        android:id="@+id/textViewBookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="2dp"
        tools:text="Book name"
        android:textSize="24sp" />
</LinearLayout>